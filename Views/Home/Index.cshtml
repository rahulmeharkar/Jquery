@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Employee Record Management</h1>
    <p>building Web apps with ASP.NET Core.</p>
</div>
<button id="bt1" onclick="change()">Add Employee Record</button>&nbsp;<button id="bt3" onclick="change2()">Add Country Record</button>&nbsp;<button id="bt5" onclick="change3()">Add State Record</button>&nbsp;<button id="bt7" onclick="change4()">Add City Record</button>&nbsp;<button id="bt9" onclick="change5()">Add Department Record</button>
<form id="formID1">
    <h3>Add Country</h3>
    <div class="form-group">
        <label for="exampleFormControlFile1">Country:</label>
        <input type="text" class="form-control" id="cname">
    </div>
    <button type="button" id="btn2">Save</button>
</form>
<form id="formID3">
    <h3>Add State</h3>
    <div class="form-row">
        <div class="form-group col-md-6">
            <div class="form-group">
                <label for="country">Country:</label>
                <select id="country" style="width: 100%;" class="form-control" required><option value="">--Select Country--</option></select>
            </div>
            <div class="form-group">
                <label for="exampleFormControlFile1">Sate:</label>
                <input type="text" class="form-control" id="statename">
            </div>
        </div>
    </div>
    <button type="button" id="btn4">Save</button>
</form>
<form id="formID4">
    <h3>Add City</h3>
    <div class="form-row">
        <div class="form-group">
            <label for="country2">Country:</label>
            <select id="country2" style="width: 100%;" class="form-control" required><option value="">--Select Country--</option></select>
        </div>
        <div class="form-group">
            <label for="state1">State:</label>
            <select id="state1" style="width: 100%;" class="form-control" disabled="disabled" required><option value="">--Select State--</option></select>
        </div>
        <div class="form-group">
            <label for="cityname">City:</label>
            <input type="text" class="form-control" id="cityname">
        </div>
    </div>
    <button type="button" id="btn6">Save</button>
</form>
<form id="formID5">
    <h3>Add Department</h3>
    <div class="form-group">
        <label for="exampleFormControlFile1">Department:</label>
        <input type="text" class="form-control" id="dname">
    </div>
    <button type="button" id="btn8">Save</button>
</form>
<form id="formID">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="firstname">First Name</label>
            <input type="text" class="form-control" id="firstname" placeholder="Rahul" required>
        </div>
        <div class="form-group col-md-6">
            <label for="lastname">Last Name</label>
            <input type="text" class="form-control" id="lastname" placeholder="Meharkar" required>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputEmail4">Email</label>
            <input type="email" class="form-control" id="inputEmail4" placeholder="Email" required>
        </div>
        <div class="form-group col-md-6">
            <label for="inputNumber">Phone</label>
            <input type="tel" class="form-control" id="phone" placeholder="1875946862" required>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="gender">Gender</label>
            <select class="form-control" id="gender" required>
                <option value="">Select Gender</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
                <option value="Other">Other</option>
            </select>
        </div>
        <div class="form-group col-md-6">
            <label for="dob">DOB</label>
            <input type="date" class="form-control" id="dob" required>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="department">Department</label>
            <select id="dept" style="width: 100%;" class="form-control" required><option value="0">--Select Department--</option></select>
        </div>
        <div class="form-group col-md-6">
            <label for="hobbies">Hobbies</label>
            <input type="text" class="form-control" id="hobbies" required>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <div class="form-group">
                <label for="country">Country:</label>
                <select id="country1" style="width: 100%;" class="form-control" required><option value="">--Select Country--</option></select>
            </div>
        </div>
        <div class="form-group col-md-6">
            <div class="form-group">
                <label for="state">State:</label>
                <select id="state" style="width: 100%;" class="form-control" disabled="disabled" required><option value="">--Select State--</option></select>
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <div class="form-group">
                <label for="city">City:</label>
                <select id="city" style="width: 100%;" class="form-control" disabled="disabled" required><option value="">--Select City--</option></select>
            </div>
        </div>
        <div class="form-group col-md-6">
            <div class="form-group">
                <label for="pincode">Pin Code:</label>
                <input type="number" class="form-control" id="pincode" required>
            </div>
        </div>
    </div>
    <button type="button" id="submit" class="btn btn-primary">Add Employee</button>
</form>

<table id="table" class="table table-hover">
    <thead>
        <tr>
            <th>Delete</th>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Gender</th>
            <th>DOB</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Department</th>
            <th>Hobbies</th>
            <th>City</th>
            <th>State</th>
            <th>Country</th>
            <th>Pincode</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>
